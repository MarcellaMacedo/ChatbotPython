def coffee_bot():
  print ("Welcome to the cafe!")
  
  size = get_size()
  drink_type = get_drink_type()
  print('Alright, {} and {}!'.format(size, drink_type))

  extra_options()

  name = input('Can I get your name please? \n> ')
  print('Thanks, {}! Your drink will be ready shortly! :)'.format(name))

def get_size():
  res = input('What size drink can I get for you? \n[a] Small \n[b] Medium \n[c] Large \n> ')
  if res == 'a':
    return 'You choose the size small'
  elif res == 'b':
    return 'You choose the size medium'
  elif res == 'c':
    return 'You choose the size large'
  else:
    print_message()
    return get_size()

def print_message():
  print("I'm sorry, I did not understand your selection... Please enter the corresponding letter for your response:")

def get_drink_type():
  res = input('What type of drink would you like? \n[a] Brewed Coffee \n[b] Mocha \n[c] Latte \n> ')
  if res == 'a':
    return 'you choose brewed coffee. Right choice!'
  elif res == 'b':
    return 'you choose mocha. Right choice!'
  elif res == 'c':
    return order_latte()
  else:
    print_message()
    return get_drink_type()

def order_latte():
  res = input('So what kind of milk for your latte? \n[a] 2% milk \n[b] Non-fat milk \n[c] Soy milk \n> ')
  if res == 'a':
    return 'one latte with a 2% milk. Yummy!'
  elif res == 'b':
    return 'one latte with a non-fat milk. Yummy!'
  elif res == 'c':
    return 'one latte with a soy milk. Yummy!'
  else:
    print_message()
    return order_latte()
  
def extra_options():
  res = input('Would you like a plastic cup or did you bring your own reusable cup? \n[a] I\'ll need a cup. \n[b] Brought my own! \n> ')
 
  if res == 'a':
    print('Okay, no problem! We\'ll get you a plastic cup.')
  elif res == 'b':
    print('Great! We\'ll fill up your reusable cup.')
  else:
    print_message()
    return extra_options()



# Call coffee_bot()!
coffee_bot()

#Run the code by entering python3 script.py in the terminal
